<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2 class="text-center">Weclome <%= current_user.name %></h2>
      <br>
      <%= form_tag("/links", method: :post, :html => {class: 'form-horizontal'}) do %>
          <div class="form-group">
            <%= text_field :link, :url, placeholder: "Enter url" ,class:"form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= text_field :link, :short_url, placeholder: "Enter Custom Url" ,class:"form-control input-md" %>
          </div>
          <div class="form-group text-center">
            <%= submit_tag 'Shorten Url' ,class: "btn btn-primary btn-md" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<hr>
